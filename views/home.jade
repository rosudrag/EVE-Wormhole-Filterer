html
  head
    title=title
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    link(href='/main.css', rel='stylesheet')
    script(src='/js/jquery.min.js')
    script(src='/js/bootstrap.min.js')
  body.Site
    div.container
      div.Jumbotron.left-column
        h1 Hello theraguy!
        p Work In Progress app to find sigs that haven't been scanned yet.
        p First textbox: copy paste existing bookmarks
        p Second textbox: copy paste all anomalies
      div.right-column
        form(name="wormholefilter", action="/", method="post")
          section
            div.column
              textarea(type="textarea", name="bookmarks", class="form-control", placeholder = "Your bookmarks copy paste")
            div.column
              textarea(type="textarea", name="signatures", class="form-control", placeholder = "Your cosmic anomalies copy paste")
            div.column
              input(type="submit", value="submit", class="btn-primary")
        if wormholeFilterResult
          div.column
            table(class="table table-striped table-bordered table-hover")
              thead
                tr: th Sigs
                    th Status
              tbody
                for result in wormholeFilterResult
                  tr
                    td
                      p=result
                    td
                      p="not scanned"
    div.flex-container.flex-center
      footer
        div.flex-container.flex-center
          p.foo
            | Developed with love by&nbsp;
            a(href='http://rosudrag.github.io/', target='_blank') DRR
        a.flex-center(href='https://github.com/rosudrag/EVE-Wormhole-Filterer', target='_blank') EVE-Wormhole-Filterer Opensource github repository
