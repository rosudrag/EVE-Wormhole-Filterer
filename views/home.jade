html
  head
    title=title
    link(href='/main.css', rel='stylesheet')
    link(href='/css/flexboxgrid.css', rel='stylesheet')
    link(href='/css/bootstrap.css', rel='stylesheet')
    link(href='/css/less-space.css', rel='stylesheet')
    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-76951311-1', 'auto');
      ga('send', 'pageview');

  body.layout
    div.page
      div.container
        header.jumbotron
          div.row.center-xs
            h1.hero-headline Thera Inspector
          div.row.center-xs
            p.hero-headline Inspects yours holes so you don't have to
      div.wrap.container-fluid
        section.page-section
          form(name="wormholefilter", action="/", method="post")
            div.row.center-xs.around-xs.middle-xs
              div.col-xs-12.col-sm-4
                p Bookmarks
                textarea(type="textarea", name="bookmarks", class="form-control xs-mb-10 md-mb-0", placeholder = "Copy paste your bookmarks ")
              div.col-xs-12.col-sm-4
                p Signatures
                textarea(type="textarea", name="signatures", class="form-control xs-mb-10 md-mb-0", placeholder = "Copy paste your cosmic anomalies ")
              div.col-xs-12.col-sm-2
                br
                input(type="submit", value="submit", class="btn-primary xs-mb-10 md-mb-0")
        if supersignatures || expiredsignatures
          section.page-section
            div.tableoverflowcontainer
              if supersignatures
                table(class="table table-striped table-bordered table-hover", data-toggle="table")
                  thead
                    tr: th(data-sortable="true") Sigs
                        th(data-sortable="true") Destination    
                        th(data-sortable="true") Region                
                  tbody
                    for result in supersignatures
                      tr
                        td
                          p=result.signatureId
                        td
                          p=result.destination
                        td
                          p=result.region
              if expiredsignatures
                table(class="table table-striped table-bordered table-hover", data-toggle="table")
                  thead
                    tr: th(data-sortable="true") Expired Signatures
                        th(data-sortable="true") Status                  
                  tbody
                    for result in expiredsignatures
                      tr
                        td
                          p=result.signatureId
                        td
                          p=result.status
        footer.page-footer
          div.row
            div.col-xs.start-xs
              p 
                | Developed with love by&nbsp;
                a(href='http://rosudrag.github.io/', target='_blank') DRR
            div.col-xs-offset-6.col-xs.center-xs
              a(class='flex-center', href='https://github.com/rosudrag/EVE-Wormhole-Filterer', target='_blank') EVE-Wormhole-Filterer github repo
